{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [ ],
    "tasks": [
        {
            "taskName": "build",
            "args": [ "**/project.json" ],
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            // TODO: Add new test project paths here
            "args": [ "tests/CoreExampleLibrary.Tests" ],
            "isTestCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        }
    ]
}